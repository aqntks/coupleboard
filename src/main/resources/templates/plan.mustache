</head>
<body class="">

<div class="wrapper">
    <div class="sidebar">
        <!--
          Tip 1: You can change the color of the sidebar using: data-color="blue | green | orange | red"
      -->
        <div class="sidebar-wrapper">
            <div class="logo">
                <a href="javascript:void(0)" class="simple-text logo-mini">
                    IPH
                </a>
                <a href="/" class="simple-text logo-normal">
                    HOME
                </a>
            </div>
            <ul class="nav">
                <li class="active ">
                    <a href="plan">
                        <i class="tim-icons icon-chart-pie-36"></i>
                        <p>계획보드</p>
                    </a>
                </li>
                <li>
                    <a href="memory">
                        <i class="tim-icons icon-badge"></i>
                        <p>추억보드</p>
                    </a>
                </li>
                <li>
                    <a href="../add_couple">
                        <i class="tim-icons icon-single-02"></i>
                        <p>커플 등록</p>
                    </a>
                </li>
            </ul>
        </div>
    </div>
    <div class="main-panel">

        {{>layout/navbar}}

        <div class="content">
            <div class="row">
                <div class="col-md-4">
                    <div id="calendar"></div>
                </div>
                <div class="col-md-8">
                    <div class="card">
                        <div class="card-header">
                            <h5 class="title">계획 등록</h5>
                        </div>
                        <div class="card-body">
                            <form>
                                <div class="row">
                                    <div class="col-md-4 pr-md-1">
                                        <div class="form-group">
                                            <label>년</label>
                                            <input type="text" class="form-control" placeholder="Year" id="year">
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <label>월</label>
                                            <input type="text" class="form-control" placeholder="Month" id="month">
                                        </div>
                                    </div>
                                    <div class="col-md-4 pl-md-1">
                                        <div class="form-group">
                                            <label>일</label>
                                            <input type="text" class="form-control" placeholder="Date" id="date">
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="form-group">
                                            <label>장소</label>
                                            <input type="text" class="form-control" placeholder="Place" id="place">
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-8">
                                        <div class="form-group">
                                            <label>일정</label>
                                            <textarea rows="4" cols="80" class="form-control" placeholder="Content" id="content"></textarea>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                        <div class="card-footer">
                            <button type="submit" class="btn btn-fill btn-primary" id="btn-plan-save">Add</button>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="card">
                        <div class="card-header">
                            <h4 class="card-title">오늘 일정</h4>
                        </div>
                        <div class="card-body">
                            {{#today}}
                            <div class="alert alert-info">
                                <span>{{place}} - {{content}}</span>
                            </div>
                            {{/today}}
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="card">
                        <div class="card-header">
                            <h4 class="card-title">다가오는 일정</h4>
                        </div>
                        <div class="card-body">
                            {{#next}}
                            <div class="alert alert-primary">
                                <button type="button" aria-hidden="true" class="close" data-dismiss="alert" aria-label="Close">
                                    <i class="tim-icons icon-simple-remove"></i>
                                </button>
                                <span><b> ({{month}}/{{date}}) </b> {{place}} - {{content}}</span>
                            </div>
                            {{/next}}
                        </div>
                    </div>
                </div>
            </div>
        </div>

        {{>layout/footnav}}
    </div>
</div>
{{>layout/dropdown}}
