                                            <input type="text" class="form-control" placeholder="Place" id="place">
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-8">
                                        <div class="form-group">
                                            <label>내용</label>
                                            <textarea rows="4" cols="80" class="form-control" placeholder="Content" id="content"></textarea>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class = "row">
                                            <div class="pt-md-3">
                                                <input type="file" id="file" name="file" accept="image/*" onchange="setThumbnail(event);"/>
                                                <button type="button" class="btn btn-fill btn-primary" id="btn-addImg">사진 추가</button>
                                            </div>
                                        </div>

                                    </div>
                                </div>
                        </div>
                        <div class="card-footer">
                            <button type="submit" class="btn btn-fill btn-primary" id="btn-save">Add</button>
                        </div>
                    </div>
                </div>
                <!--프로필 시작-->
                <div class="col-md-4">
                    <div class="card card-user">
                        <div class="card-body">
                            <p class="card-text">
                                <div class="author">
